<% include ../partials/header %>
<div class="jumbotron">
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <td><a name="" id="" class="btn btn-outline-info" href="/newproduct" role="button">ADD NEW</a></td>
        </tr>
    </thead>
    <tbody id="myTable">
        <% product.forEach(function(product) { %>
        <tr>
            <td scope="row">
                <%= product.id %>
            </td>

            <td>
                <%= product.title %>
            </td>
            <td>
                <%= product.price %>
            </td>
            <td><a name="" id="" class="btn btn-outline-primary" href="/products/<%= product.id%>" role="button">UPDATE</a>
            
        </td>
        </tr>
        <% });%>
    </tbody>
</table>
</div>
<script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

