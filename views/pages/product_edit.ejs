<% include ../partials/header %>
<script language="JavaScript">
  function CheckConfirm() {
    if (confirm('Would you want to delete item?') == true) {
      window.location = "/product_delete/<%= product.id %>";
    } else {
      return (null);
    }
  }
</script>
<div class="jumbotron">
<form action="/product/update" method="post">
  <div class="form-group">
    <label for="">ID</label>
    <input type="number" value="<%= product.id %>" name="id" id="" class="form-control" placeholder="" aria-describedby="helpId">
    <small id="helpId" class="text-muted">Product ID</small>
  </div>
  <div class="form-group">
    <label for="">Titile</label>
    <input type="text" value="<%= product.title %>" name="title" id="" class="form-control" placeholder=""
      aria-describedby="helpId">
    <small id="helpId" class="text-muted">Product Title</small>
  </div>
  <div class="form-group">
    <label for="">Price</label>
    <input type="number" value="<%= product.price %>" name="price" id="" class="form-control" placeholder=""
      aria-describedby="helpId">
    <small id="helpId" class="text-muted">Product Price</small>
  </div>
  <div class="form-group">
    <label for="">TIME</label>
    <input type="text"
      class="form-control" value="<%= time %>"name="create" id="datepicker" aria-describedby="helpId" placeholder="" disabled>
    <small id="helpId" class="form-text text-muted">TIME</small>
    <script>
      $('#datepicker').datepicker({
        showOtherMonths: true
      });
  </script>
  </div>
  <div>
    <a name="" id="" class="btn btn-secondary" href="/products" role="button">CANCLE</a>
    <button type="submit" class="btn btn-outline-success">SAVE</button>
    <a name="btnConfirm" value="Confirm" OnClick="CheckConfirm()" class="btn btn-outline-danger" href="#" role="button">DELETE</a>
  </div>
  </div>
</form>



<% include ../partials/footer %>