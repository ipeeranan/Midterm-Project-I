<% include ../partials/header %>
<script language="javascript">
  function functionAlert() {
    alert('Would you want to delete item?');
  }
</script>
<form action="/user/update" method="post">
  <div class="jumbotron">
    <h1 class="display-4">USER UPDATE</h1>
    <div class="form-group">
      <label for="">ID</label>
      <input type="number" class="form-control" value="<%= user.id %>" name="id" id="" aria-describedby="helpId"
        placeholder="">
      <small id="helpId" class="form-text text-muted">User ID</small>
    </div>
    <div class="form-group">
      <label for="">Email</label>
      <input type="text" class="form-control" value="<%= user.email %>" name="title" id="" aria-describedby="helpId"
        placeholder="">
      <small id="helpId" class="form-text text-muted">Eamil</small>
    </div>
    <div class="form-group">
      <label for="">Password</label>
      <input type="text" class="form-control" value="<%= user.password %>" name="password" id="" aria-describedby="helpId"
        placeholder="">
      <small id="helpId" class="form-text text-muted">Password</small>
    </div>
    <div class="form-group">
      <label for="">TIME</label>
      <input type="text"
        class="form-control" value="<%= time %>"name="create" id="datepicker" aria-describedby="helpId" placeholder="" disabled>
      <small id="helpId" class="form-text text-muted">TIME</small>
      <script>
        $('#datepicker').datepicker({
          showOtherMonths: true
        });
    </script>
    </div>
    
    <a name="" id="" class="btn btn-secondary" href="/users" role="button">CANCLE</a>
    <button type="submit" class="btn btn-outline-success">SAVE</button>
    <a name="" id="" OnClick="JavaScript:functionAlert();" class="btn btn-outline-danger" href="/user_delete/<%= user.id %>" role="button">DELETE</a>

</form>
<% include ../partials/footer %>